<script>
(function () {
  const root = document.getElementById('countdown');
  if (!root) return;

  // ia valorile din primul <div> (cifra) al fiecÄƒrui bloc
  const blocks = Array.from(root.children).map(block => block.querySelector('div'));
  if (blocks.length < 4) return;

  let days    = parseInt(blocks[0].textContent.trim(), 10) || 0;
  let hours   = parseInt(blocks[1].textContent.trim(), 10) || 0;
  let minutes = parseInt(blocks[2].textContent.trim(), 10) || 0;
  let seconds = parseInt(blocks[3].textContent.trim(), 10) || 0;

  // converteÈ™te Ã®n secunde totale È™i porneÈ™te timerul
  const endAt = new Date('2025-11-16 23:59:59');
  function secondsLeft() {
    return Math.max(0, Math.floor((endAt.getTime() - Date.now()) / 1000));
  }
  let total = secondsLeft();
  // let total = days * 86400 + hours * 3600 + minutes * 60 + seconds;

  function updateView(remain) {
    const d = Math.floor(remain / 86400);
    remain %= 86400;
    const h = Math.floor(remain / 3600);
    remain %= 3600;
    const m = Math.floor(remain / 60);
    const s = remain % 60;

    // scrie valorile Ã®n DOM
    blocks[0].textContent = d;
    blocks[1].textContent = String(h).padStart(2, '0');
    blocks[2].textContent = String(m).padStart(2, '0');
    blocks[3].textContent = String(s).padStart(2, '0');
  }

  updateView(total);

  const tick = setInterval(() => {
    total--;
    if (total <= 0) {
      total = 0;
      updateView(total);
      clearInterval(tick);
      // opÈ›ional: adaugÄƒ o clasÄƒ/trigger la final
      // root.classList.add('opacity-50');
      return;
    }
    updateView(total);
  }, 1000);
})();
</script>

