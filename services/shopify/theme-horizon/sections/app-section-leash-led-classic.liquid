  "name": "Section leash led classic",
  "tag": "section",
  "class": "section-leash-led-classic-wrapper",
  "settings": [],
  "presets": [
    {
      "name": "Section leash led classic",
      "category": "Custom Layout",
    }
  ]
}
{% endschema %}
