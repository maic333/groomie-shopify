<div id="section-groomie-collection-black-week" class="py-16 sm:py-24 bg-gradient-to-b from-black via-zinc-900 to-black relative overflow-hidden">
  <!-- Background effects -->
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_50%,rgba(234,179,8,0.08),transparent_60%)]"></div>
  <div class="absolute inset-0 bg-[linear-gradient(45deg,transparent_48%,rgba(234,179,8,0.02)_48%,rgba(234,179,8,0.02)_52%,transparent_52%)] bg-[length:40px_40px]"></div>
  
  <div class="w-full max-w-content mx-auto px-2 xs:px-4 sm:px-6 lg:px-8 relative">
    <!-- Header -->
    <div class="text-center mb-12 sm:mb-16">
      {% comment %} <div class="inline-flex items-center gap-2 bg-yellow-400 text-black rounded-full px-6 py-2 mb-6 animate-pulse shadow-lg shadow-yellow-400/30">
        <span class="text-sm font-black tracking-wider">BLACK NOVEMBER -30%</span>
      </div> {% endcomment %}
      
      <h2 class="text-3xl sm:text-5xl lg:text-6xl font-bold text-white mb-4 leading-tight">
        Vezi toată colecția
        <span class="block bg-gradient-to-r from-yellow-400 via-yellow-300 to-amber-400 bg-clip-text text-transparent">Groomie</span>
      </h2>
      
      {% comment %} <p class="text-lg sm:text-xl text-slate-300 max-w-2xl mx-auto">
        Profită de reducerile de Black November pentru întreaga gamă de produse premium
      </p> {% endcomment %}
    </div>

    <!-- Products Grid -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-2 lg:gap-6 mb-12">
      {% for collection in collections %}
        {% assign classic_leash = collection.products | where: 'id', 9926163693897 %}
        {% assign bowl = collection.products | where: 'id', 9918551753033 %}
        {% assign car_pad = collection.products | where: 'id', 9923786703177 %}

        {% assign featured_products = classic_leash | concat: bowl | concat: car_pad %}

        {% for product in featured_products %}
          {% assign variants = product.variants %}
          {% assign product_title = product.title %}
          {% if product.id == classic_leash[0].id %}
            {% assign product_title = 'Lesă Groomie Classic 5M' %}
          {% endif %}
          {% if product.id == bowl[0].id %}
            {% assign product_title = 'Bol Groomie pliabil - 4 culori' %}
          {% endif %}
          {% if product.id == car_pad[0].id %}
            {% assign product_title = 'Husă auto universală' %}
          {% endif %}

          {% if product.id == 9918551753033 %}
            {% assign variants = product.variants | slice: 0, 1 %}
          {% endif %}

          {% for variant in variants %}
            <div class="flex flex-col bg-gradient-to-br from-zinc-900 to-black border-2 border-yellow-400/20 rounded-2xl p-4 sm:p-6 hover:border-yellow-400/50 transition-all duration-300 hover:scale-105 shadow-xl hover:shadow-yellow-400/20">
              <a href="{{ variant.url }}" class="aspect-square bg-white rounded-xl overflow-hidden mb-4">
                <img 
                  src="{{ variant.featured_media.preview_image | default: product.featured_media.preview_image | image_url }}"
                  alt="{{ product.title }}"
                  class="w-full h-full object-contain sm:p-4"
                />
              </a>
              <h3 class="text-lg font-bold text-white mb-2">
                <a href="{{ variant.url }}">{{ product_title }}</a>
              </h3>

              <div class="flex-1 flex items-end justify-between mb-4">
                <div class="flex flex-col sm:flex-row sm:gap-2">
                  <span class="leading-none text-sm line-through text-slate-500">{{ product.compare_at_price | money }}</span>
                  <span class="leading-none text-lg sm:text-xl font-bold text-yellow-400">{{ product.price | money }}</span>
                </div>
                <span class="bg-yellow-400 text-black text-xs font-bold px-2 py-1 rounded">-{{ product.compare_at_price | minus: product.price | times: 100.0 | divided_by: product.compare_at_price | ceil }}%</span>
              </div>
              <div class="flex justify-center pt-4">
                {% render 'app-add-variant-to-cart-button', product: product, variant: variant, add_to_cart_text: 'Adaugă în coș', hide_icon: true, class: 'w-full sm:w-auto text-md md:text-xl px-2 2xs:px-4 xs:px-8 md:px-12 py-4 sm:py-6 bg-groomie-sage text-white hover:bg-groomie-sage-dark transition-all duration-300 shadow-lg font-semibold' %}
              </div>
            </div>
          {% endfor %}
        {% endfor %}
      {% endfor %}
    </div>

    <!-- CTA Button -->
    <div class="text-center pt-8">
      <a href="{{ collections | map: 'url' | first }}" class="w-full sm:w-auto text-lg sm:text-xl px-8 sm:px-12 py-4 rounded-xl bg-yellow-500 text-black hover:bg-yellow-400 transition-all duration-300 shadow-lg shadow-yellow-500/50 font-semibold border-2 border-yellow-400 hover:border-yellow-300">
        Vezi toată colecția →
      </a>
    </div>
  </div>
</div>


