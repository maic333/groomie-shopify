  "name": "Section BW collection",
  "tag": "section",
  "class": "section-groomie-collection-black-week-wrapper",
  "settings": [],
  "presets": [
    {
      "name": "Section BW collection",
      "category": "Custom Layout",
    }
  ]
}
{% endschema %}
