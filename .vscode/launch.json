{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Build",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/services/shopify",
      "command": "zsh -lc \"nvm use && npm run build:watch\""
    },
    {
      "name": "Run",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/services/shopify",
      "command": "zsh -lc \"nvm use && npm run dev\""
    }
  ]
}